  <div id="register" class="modal">
    <div class="modal-content">
      <div class="input-field col s12">
        <h4 class="center">Registration</h4>
        <form action="/registrationJWT" method="POST" enctype="multipart/form-data">
          <label for="email">What is your email</label>
          <input type="email" name="email" id="email-registration" class="autocomplete content" autocomplete>
          <label for="password">What is your password</label>
          <input type="password" class="password-registration" name="password" class="autocomplete password"
            autocomplete>
          <div class="file-field input-field">
            <div class="btn poster-upload">
              <span>File</span>
              <input type="file" class="create-post" name="poster" id="poster" class="autocomplete poster">
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text">
            </div>
          </div>
          <button class="btn waves-effect wavwes-light modal-close" type="submit" name="action">Register</button>
        </form>
      </div>
    </div>
  </div>

  <div id="loginJWT" class="modal">
    <div class="modal-content">
      <div class="input-field col s12">
        <h4 class="center">Login</h4>
        <form action="/loginJWT" method="POST">
          <label for="email">What is your email</label>
          <input type="email" name="email" id="email-login" class="autocomplete email">
          <label for="password">What is your password</label>
          <input type="password" class="password-registration" name="password" id="password"
            class="autocomplete password">

          <button class="btn waves-effect waves-light modal-close" type="submit" name="action">Login</button>
        </form>
      </div>
    </div>
  </div>